<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip"/>
            <gradient
                    android:startColor="@color/icon_color"
                    android:centerColor="@color/icon_color"
                    android:centerY="0.50"
                    android:endColor="@color/icon_color"
                    android:angle="270"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                        android:radius="0dip"/>
                <gradient
                        android:startColor="#ff0d9988"
                        android:endColor="#ff0d9988"
                        android:angle="90"
                        />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                        android:radius="0dip"/>
                <gradient
                        android:startColor="#ff0d9988"
                        android:endColor="#ff0d9988"
                        android:angle="90"
                        />
            </shape>
        </clip>
    </item>
</layer-list>

