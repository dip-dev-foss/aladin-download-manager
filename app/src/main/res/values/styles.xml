<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_txt_action_bar">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textScaleX">.9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_txt_title">
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:textScaleX">.9</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="style_txt_dialog_sub_title" parent="style_txt_title">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textScaleX">.9</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="style_txt_dialog_bnt" parent="style_txt_title">
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textScaleX">.9</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:background">@drawable/ic_button_press</item>
    </style>

    <style name="style_txt_dialog_input">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textScaleX">.9</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:padding">@dimen/dp_5</item>
    </style>

    <style name="style_txt_dialog_normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textScaleX">.9</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <!-- ======================================================================================================= -->
    <style name="tab_button" parent="style_txt_title">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textScaleX">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="web_url" parent="style_txt_title">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textScaleX">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_light</item>
    </style>


    <style name="dialog_sub_title_style_small" parent="style_txt_dialog_sub_title">
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="home_fragment_text_item">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:background">@drawable/ic_button_press</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="drawer_navigation_menu_item_button" parent="style_txt_dialog_normal">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

    <style name="ic_web_loading_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ic_web_progress_drawable</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">5dip</item>
    </style>

    <style name="ic_running_download_progress" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ic_running_download_progress</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>

    <style name="slash_animation">
        <item name="android:windowEnterAnimation">@anim/appear_screen_anim</item>
        <item name="android:windowExitAnimation">@anim/disappear_screen_anim</item>
    </style>

    <style name="dialog_style">
        <item name="android:background">@drawable/ic_dialog_bg</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
    </style>


    <dimen name="sp_20">20sp</dimen>
</resources>
