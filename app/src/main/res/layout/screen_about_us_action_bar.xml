<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="?attr/colorPrimary"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/bnt_exit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_button_press"
        android:contentDescription="@string/exit"
        android:onClick="onBackButtonClick"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_navigation_arrow_back"/>

    <TextView
        style="@style/style_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/bnt_exit"
        android:layout_toRightOf="@+id/bnt_exit"
        android:gravity="center_vertical"
        android:padding="@dimen/element_padding_8"
        android:text="@string/about_us"
        android:textColor="@color/white"
        />

</RelativeLayout>
