<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/main_layout"
              style="@style/dialog_style">

    <LinearLayout
            android:id="@+id/titleContainerLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enjoying_videomate"
                style="@style/style_txt_title"
                android:padding="@dimen/dp_10"
                android:gravity="center"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/color_border_deep"/>

    </LinearLayout>

    <!-- Ok Button -->
    <TextView
            android:id="@+id/happy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/ic_button_press"
            android:layout_marginTop="@dimen/element_padding_8"
            android:padding="@dimen/dp_10"
            style="@style/style_txt_dialog_normal"
            android:text="@string/happy_yes"

            android:gravity="center"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_border_deep"/>

    <TextView
            android:id="@+id/not_happy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/ic_button_press"

            android:layout_marginTop="@dimen/element_padding_8"
            android:padding="@dimen/dp_10"
            style="@style/style_txt_dialog_normal"
            android:text="@string/not_happy_no"
            android:gravity="center"/>

</LinearLayout>
